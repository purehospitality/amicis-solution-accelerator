# Local Development Environment Variables
# Copy this to .env and update values as needed

# Service Ports
PORT_ROUTING=8080
PORT_AUTH=3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devpassword

# Database Configuration (choose one)
# Option 1: Local MongoDB (default)
COSMOS_ENDPOINT=mongodb://admin:devpassword@localhost:27017

# Option 2: Azure Cosmos DB Free Tier (uncomment and add your values)
# COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key-here
# COSMOS_DATABASE=amicis

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Azure Key Vault (for production)
# KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
